<div class="mb-8 bg-white rounded-lg shadow-sm p-4">
  <div class="flex flex-wrap gap-4 items-center">
    <div class="relative inline-block w-64 sm:w-[417px]">
      <button id="brandSelectBtn"
        class="w-full flex items-center justify-between px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm hover:border-gray-400 focus:outline-none">
        <span class="flex items-center gap-2">
          <span id="brandButtonContent" class="flex items-center gap-2 text-xl">
            <span id="selectedBrandText">Thương hiệu</span>
          </span>
        </span>
        <svg class="w-4 h-4 text-gray-500 transition-transform duration-200" id="brandArrow"
          xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <div id="brandDropdown"
        class="absolute z-10 mt-2 w-full bg-white border border-gray-200 rounded-md shadow-lg hidden">
        <ul class="max-h-60 overflow-auto">
          <li class="px-4 py-2 flex items-center gap-2 hover:bg-gray-100 cursor-pointer" data-name="GROTECH"
            data-img="https://demo.sweetsoft.vn/Orgacert/images/Brands-1.png">
            <img src="https://demo.sweetsoft.vn/Orgacert/images/Brands-1.png" class="w-10 h-10 object-cover" />
            <span class="translate-y-1">GROTECH</span>
          </li>
          <li class="px-4 py-2 flex items-center gap-2 hover:bg-gray-100 cursor-pointer" data-name="XGROW"
            data-img="https://demo.sweetsoft.vn/Orgacert/images/Brands-1.png">
            <img src="https://demo.sweetsoft.vn/Orgacert/images/Brands-1.png" class="w-10 h-10 object-cover" />
            <span class="translate-y-1">XGROW</span>
          </li>
          <li class="px-4 py-2 flex items-center gap-2 hover:bg-gray-100 cursor-pointer" data-name="PROTON FUSION"
            data-img="https://demo.sweetsoft.vn/Orgacert/images/Brands-1.png">
            <img src="https://demo.sweetsoft.vn/Orgacert/images/Brands-1.png" class="w-10 h-10 object-cover" />
            <span class="translate-y-1">PROTON FUSION</span>
          </li>
        </ul>
      </div>
    </div>

    <button class="flex items-center gap-3 sm:w-auto px-4 py-[9px] bg-primary-color text-white rounded-md shadow-sm hover:bg-primary-color/90 focus:outline-none focus:ring-2
      focus:ring-primary-color focus:ring-offset-2 w-fit">
      Tìm kiếm
    </button>
  </div>

  <div class="flex items-center gap-4 mt-4">
    <select
      class="flex-grow min-w-[200px] sm:flex-grow-0 sm:w-auto px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-color">
      <option>Thứ tự</option>
      <option>Mới nhất</option>
      <option>Cũ nhất</option>
      <option>A → Z</option>
      <option>Z → A</option>
    </select>

    <select
      class="flex-grow min-w-[200px] sm:flex-grow-0 sm:w-auto px-4 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-primary-color">
      <option>Loại phân bón</option>
      <option>Phân hữu cơ</option>
      <option>Phân vô cơ</option>
      <option>phân bón NPK</option>
      <option>phân bón NPK</option>
    </select>
  </div>
</div>
