<div class="fixed z-20 bottom-13 md:bottom-3 right-3 flex items-center flex-col gap-3">
  <div class="relative">
    <div id="fabMenu"
      class="absolute bottom-30 right-0 flex flex-col gap-3 opacity-0 pointer-events-none transition-all duration-300">
      <!-- Call Button -->
      <button class="bg-green-500 text-white w-12 h-12 rounded-full
          flex items-center justify-center shadow-lg
        hover:bg-green-600 hover:scale-110 transition-all transform translate-y-2" aria-label="Gọi điện"
        title="Gọi điện" onclick="window.location.href='tel:+84123456789'">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
          <path
            d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
        </svg>
      </button>

      <!-- Email Button -->
      <button class="bg-red-500 text-white w-12 h-12 rounded-full
        flex items-center justify-center shadow-lg
      hover:bg-red-600 hover:scale-110 transition-all transform translate-y-2" aria-label="Gửi email" title="Gửi email"
        onclick="window.location.href='mailto:example@email.com'">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
          <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
          <path d="M3 7l9 6l9 -6" />
        </svg>
      </button>

      <!-- Facebook Button -->
      <button class="bg-blue-600 text-white w-12 h-12 rounded-full
        flex items-center justify-center shadow-lg
      hover:bg-blue-700 hover:scale-110 transition-all transform translate-y-2" aria-label="Facebook" title="Facebook"
        onclick="window.open('https://facebook.com/yourpage', '_blank')">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"
          class="w-6 h-6">
          <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" />
        </svg>
      </button>
    </div>
    <button id="fabToggle"
      class="bg-red-600 text-white w-12 h-12 rounded-full flex items-center justify-center shadow-xl hover:scale-110 transition-all hover:rotate-90 "
      aria-label="Menu" title="Menu">
      <i class="fa-solid fa-plus"></i>
    </button>
    <button id="backToTopBtn" class="bg-red-600 text-white w-12 h-12 rounded-full
      flex items-center justify-center shadow-lg
      hover:scale-110 transition-all mt-3
      pointer-events-none" aria-label="Quay lại đầu trang" title="Quay lại đầu trang">
      <i class="fa-solid fa-arrow-up-long"></i>
    </button>
  </div>
</div>
