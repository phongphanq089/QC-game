{% macro cardRoom(room) %}
<div class="group relative w-full h-full select-none">

  <div class="relative overflow-hidden rounded-xl shadow-lg w-full aspect-[16/10]">
    <img src="{{ room.image }}" alt="{{ room.title }}"
      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
    <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition-colors"></div>
  </div>

  <div
    class="absolute -bottom-6 left-6 md:bottom-8 md:left-8 bg-[#FFF8F0] p-6 md:p-8 rounded-md shadow-xl max-w-[90%] md:max-w-md z-10 border-t-4 border-transparent hover:border-[#5B92C0] transition-all duration-300">

    <span class="block text-xs font-bold tracking-widest text-[#5B92C0] uppercase mb-2">
      {{ room.category }}
    </span>

    <h3 class="font-serif text-2xl md:text-4xl text-[#1B2F4E] mb-3 leading-tight">
      {{ room.title }}
    </h3>

    <p class="text-[#1B2F4E] opacity-80 text-sm mb-6 line-clamp-2">
      {{ room.description }}
    </p>

    <div class="w-full h-px bg-gray-300 mb-4"></div>

    <div class="flex items-center gap-6 text-[#1B2F4E] text-xs font-bold opacity-70">

      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-[#5B92C0]" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
        </svg>
        <span>{{ room.guests }} people</span>
      </div>

      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-[#5B92C0]" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M17 10.039c-3.855 0-6.978-3.123-6.978-6.978 0-.012.01-.02.011-.031H3v18h18v-7.014c-.011.002-.019.012-.031.012-3.855 0-6.969-3.111-6.969-6.967zm-5.003 4.547l1.096.883-2.923 2.923-2.923-2.923 1.096-.883 1.827 1.827 1.827-1.827z" />
        </svg>
        <span>{{ room.size }}</span>
      </div>

      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-[#5B92C0]" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M20 10V7c0-1.1-.9-2-2-2H6c-1.1 0-2 .9-2 2v3c-1.1 0-2 .9-2 2v5h1.33L4 19h1v-2h14v2h1l.67-2H22v-5c0-1.1-.9-2-2-2zm-9 0H6V7h5v3zm7 0h-5V7h5v3z" />
        </svg>
        <span>{{ room.beds }} bed</span>
      </div>

    </div>
  </div>
</div>
{% endmacro %}
