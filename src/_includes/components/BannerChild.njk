{% macro bannerChild(title= "", description="") %}
<div
  class="relative bg-black h-64 md:h-100 flex items-center justify-center overflow-hidden border-b border-mu-red/30 my-10">
  <div class="absolute inset-0 bg-[url('https://wallpaperaccess.com/full/1524368.jpg')] bg-cover bg-center opacity-40">
  </div>
  <div class="absolute inset-0 bg-gradient-to-t from-mu-bg via-transparent to-transparent"></div>
  <div class="relative z-10 max-w-7xl mx-auto px-4 text-center">
    <h1 class="text-3xl md:text-5xl font-bold text-red-500 uppercase tracking-wider mb-2">
      {{title}}
    </h1>
    <p class="text-gray-400 max-w-2xl mx-auto">
      {{ description }}
    </p>
  </div>
</div>
{% endmacro %}
