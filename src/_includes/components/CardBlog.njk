{% macro CardBlog(item) %}
<div class="swiper-slide !h-auto" data-aos="fade-right" data-aos-delay="50" data-aos-duration="1000">
  <div
    class="bg-white border border-gray-100 rounded-2xl shadow-lg overflow-hidden group cursor-pointer transition-all duration-300 hover:-translate-y-2 flex flex-col h-full">
    <div class="p-3 relative">

      {# /Orgacert {{ site.baseUrl }}#}
      <a href="/Orgacert/chi-tiet-tin-tuc/" class="overflow-hidden aspect-video clipath-v1">
        <img src="{{ item.imageUrl }}" alt="{{ item.title }}"
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
      </a>
      <div
        class="h-8 w-8 old:w-9 old:h-9 small:w-10 small:h-10 rounded-full bg-primary-color absolute max-xs:right-3 bottom-[6px] lg:bottom-3 2xl:bottom-5 right-4 lg:right-5 flex items-center justify-center text-white">
        <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 17 17" height="18px" width="18px">
          <path d="M16 0.997v9.003h-1v-7.297l-10.317 10.297-0.707-0.708 10.315-10.295h-7.316v-1h9.025z"></path>
        </svg>
      </div>
    </div>

    <div class="p-6 flex flex-col flex-grow">
      <div>
        <span class="text-xs font-bold px-3 py-1 rounded-full {{ item.categoryColor }}">
          {{ item.category }}
        </span>
        <h3 class="mt-4 text-xl font-bold text-gray-800 hover:text-green-700 transition-colors">
          <a href="/Orgacert/chi-tiet-tin-tuc/">{{ item.title }}</a>
        </h3>
        <p class="mt-2 text-gray-600 text-sm leading-relaxed line-clamp-2">
          {{ item.excerpt }}
        </p>
      </div>
      <div class="mt-auto pt-4 border-t border-gray-200">
        <p class="text-sm font-semibold text-gray-500">
          Thời gian sự kiện
        </p>
        <p class="text-sm text-gray-800">{{ item.date }}</p>
      </div>
    </div>
  </div>
</div>
{% endmacro %}
